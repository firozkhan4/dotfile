    height 25
    workspace_buttons yes
	font pango:Noto Sans 8
	# position top
    position bottom

	# status_command i3status
    status_command i3status -c ~/.config/i3/i3status.conf

    colors {
        background #2F2F2F
        statusline #eeeeee
        separator  #666666

        # colorclass           border  backgr. text
